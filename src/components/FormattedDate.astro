---
export interface Props {
	date: Date;
  small?: boolean;
}

const { date, small = false } = Astro.props;
---

<time class:list={["text-neutral-500 my-1 inline-block", { "text-sm": small }]} datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
